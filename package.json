{
  "name": "mamoru-cli",
  "version": "0.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/queryable-labs/queryable-cli"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint ./src",
    "lint:format": "prettier -c ./src/**/*.ts",
    "format": "prettier --write -c ./src/**/*.ts",
    "prepare": "husky install",
    "dev": "ts-node ./src/index.ts",
    "test": "NODE_ENV=test node --test --test-reporter spec --require ts-node/register ./src/**/*.test.ts"
  },
  "bin": {
    "mamoru-cli": "./dist/index.js",
    "mamoru": "./dist/index.js",
    "mamoru-cli-dev": "ts-node ./src/index.ts"
  },
  "devDependencies": {
    "@types/dashify": "^1.0.1",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "commander": "^9.4.0",
    "eslint": "^8.26.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "assemblyscript": "^0.19.23",
    "axios": "^0.27.2",
    "colors": "^1.4.0",
    "core-js": "3",
    "dashify": "^2.0.0",
    "handlebars": "^4.7.7",
    "ipfs-http-client": "56",
    "joi": "^17.6.0",
    "yaml": "^2.2.1"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run format",
      "npm run lint -- --fix"
    ]
  }
}
