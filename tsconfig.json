{
    "compilerOptions": {
        "lib": [
            "ES6",
        ],
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ES5",
        "allowJs": true,
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "include": [
        "./src"
    ]
}
