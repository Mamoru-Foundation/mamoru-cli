name:  "{{name}}"
on:
  - daemonId: "your-daemon-id-here"
    levels: [SEVERITY_INFO, SEVERITY_WARNING, SEVERITY_ERROR, SEVERITY_ALERT]
tasks:
    steps:
      name: Steps Block
      condition:
        condition: success()
      run:
        - single:
              name: Single Step 1
              condition: success()
              run: dummy@1
              params:
                - name: foo
                  value: value1
        - steps:
              name: Nested Steps Block
              condition:
                condition: success()
              run:
                - single:
                      name: Step 2
                      condition: success()
                      run: dummy@1
                      params:
                        - name: foo
                          value: value1
                - single:
                      name: Step 3
                      condition: success()
                      run: dummy@1
                      params:
                        - name: foo
                          value: value1
        - parallel:
              name: Parallel Steps Block
              run:
                - single:
                    name: Step 4
                    condition: success()
                    run: dummy@1
                    params:
                      - name: foo
                        value: value1
                - single:
                    name: Step 5
                    condition: success()
                    run: dummy@1
                    params:
                      - name: foo
                        value: value1
